{
  "manifest_version": 2,
  "name": "APPRL",
  "description": "Save items to your Apprl profile & create short links directly from online retailers.",
  "version": "0.3",
  "homepage_url": "http://apprl.com/",
  "icons": {
    "16": "apprl-icon16.png",
    "32": "apprl-icon32.png",
    "48": "apprl-icon48.png",
    "128": "apprl-icon128.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "*://apprl.com/",
    "*://*.apprl.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "apprl-icon19.png",
      "38": "apprl-icon38.png"
    },
    "default_title": "Save this item to Apprl",
    "default_popup": "popup.html"
  }
}
