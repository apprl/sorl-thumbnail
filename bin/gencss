#!/bin/bash

echo "Run blueprint"
blueprint -p apparelrow -f blueprint/settings.yaml > /dev/null

echo "Delete existing site_media"
rm -rf apparelrow/site_media 

echo "Assemble Pinax application files"
python apparelrow/manage.py build_media -a  > /dev/null

# FIXME: FIX THIS
echo "Copy mptt admin files"
cp -r /Users/gunnar/Code/django/installed_apps/mptt/admin_media/ apparelrow/site_media/media

echo "Done"

