#!/bin/bash


if [[ -z $DEPLROOT ]]; then
    DEPLROOT='/opt/hanssonlarsson'              # Deployment root dir
fi

# Generate these names
#DEPLNAME='apparelrow-dev'                       # Deployment name
PROJNAME='apparelrow'                           # Django project name

# Static, should not be touched
PROJDIR="$DEPLROOT/$DEPLNAME"         # Django project directory

export PYTHONPATH="$PROJDIR/$PROJNAME"
export DJANGO_SETTINGS_MODULE=settings


if [[ -e $PROJDIR/python/bin/activate ]]; then
    . $PROJDIR/python/bin/activate
fi
cd $PROJDIR/lib

python runner.py $@


